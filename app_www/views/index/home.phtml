        </div>
        <div class="clearfix ">
            {literal}
                <script>
                    $(function () {
                        var gasData = {/literal}{$tankKey}{literal};
                        var gasVal = {/literal}{$tankVal}{literal};
                        $('#container5').highcharts({
                            chart: {
                                type: 'column'
                            },
                            title: {
                                text: '燃气库存统计',
                                x: -20 //center
                            },
                            credits:{
                                        enabled:false // 禁用版权信息
                                    },
                            xAxis: {
                                    title:'种类',
                                categories: gasData
                            },
                            yAxis: {
                                title: {
                                    text: '重量'
                                },
                                plotLines: [{
                                        value: 0,
                                        width: 1,
                                        color: '#808080'
                                    }]
                            },
                            legend: {
                                enabled:false
                            },
                            series: [{"name":"重量","data":gasVal,"color":"#fec720"}]
                        });
                    });
                </script>
            {/literal}
            <div id="container5" class="fl" style="width:284px;"></div>
            {literal}
                <script>
                    $(function () {
                        var bottleKey = {/literal}{$bottleKey}{literal};
