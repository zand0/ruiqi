                                            dataLabels: {
                                                enabled: true,
                                                color: '#666',
                                                connectorColor: '#666',
                                                format: '<b>{point.name}</b>: {point.percentage:.1f} %'
                                            }
                                        }
                                    },
                                    colors: ['#98d7a0', '#f7de6a', '#f8b566','#72dad9','#f8825e','#46bddd','#525066'],
                                    legend: {
                                        enabled:false
                                    },
                                    tooltip: {
                                            valueDecimals: 2,
                                        valueSuffix: '元'
                                    },
                                    series: [{
                                            "name":"支出金额",
                                            "data":zcMoneyArr
                                    }]
                                });
                        });
                    </script>
                {/literal}
                <div id="container2" style="height:300px;"></div>
            </div>
        </div>
        <div class="cuttingLine mb20"></div>
        <div class="clearfix rqlist">
            <div class="fl xinkaihuItem" style="width:410px;">
                <div class="rq_data">
                    <ul class="clearfix">
                        <li class="rq_up">
                            <div class="leftTxt">
                                <p>本月新开户统计</p>
